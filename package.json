{
  "private": true,
  "name": "anotes",
  "version": "0.0.0",
  "description": "A collection of tools for creating Anki notes from simple text files.",
  "keywords": [
    "anki"
  ],
  "homepage": "https://github.com/aradzie/anotes#readme",
  "bugs": {
    "url": "https://github.com/aradzie/anotes/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aradzie/anotes.git"
  },
  "license": "ISC",
  "type": "module",
  "workspaces": [
    "scripts",
    "packages/anki-export",
    "packages/anotes-parser",
    "packages/anotes-format",
    "packages/anotes-core",
    "packages/anotes-cli",
    "vscode/protocol",
    "vscode/webview",
    "vscode/extension",
    "examples"
  ],
  "dependencies": {
    "rich-assert": "^0.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-plugin-logical-css": "^1.2.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "scripts": {
    "compile": "npm run compile --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint '{**/*,*}.{js,ts,tsx}'",
    "lint-fix": "eslint '{**/*,*}.{js,ts,tsx}' --fix",
    "stylelint": "stylelint '**/*.css'",
    "stylelint-fix": "stylelint '**.css' --fix",
    "format": "prettier '{**/*,*}.{js,ts,tsx,css}' --write"
  }
}
