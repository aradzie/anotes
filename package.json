{
  "name": "anotes",
  "version": "1.0.0",
  "description": "A collection of math notes for Anki.",
  "keywords": [
    "anki"
  ],
  "homepage": "https://github.com/aradzie/anotes#readme",
  "bugs": {
    "url": "https://github.com/aradzie/anotes/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aradzie/anotes.git"
  },
  "license": "ISC",
  "type": "module",
  "workspaces": [
    "scripts",
    "packages/anki-export",
    "packages/anotes-parser",
    "packages/anotes-core",
    "packages/anotes-cli",
    "vscode-webview",
    "vscode"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-plugin-logical-css": "^1.2.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "scripts": {
    "compile": "npm run compile --workspaces --if-present",
    "prebuild": "npm run compile",
    "build": "npm run build --workspaces --if-present",
    "lint": "eslint '{**/*,*}.{js,ts,tsx}'",
    "lint-fix": "eslint '{**/*,*}.{js,ts,tsx}' --fix",
    "stylelint": "stylelint '**/*.css'",
    "stylelint-fix": "stylelint '**.css' --fix",
    "format": "prettier '{**/*,*}.{js,ts,tsx,css}' --write"
  }
}
