{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Anki Notes",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#block-latex"
    },
    {
      "include": "#inline-latex"
    },
    {
      "include": "#block-latex-alt"
    },
    {
      "include": "#inline-latex-alt"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.anki-notes",
          "match": "^!(type|deck|tags|template):"
        },
        {
          "name": "keyword.anki-notes",
          "match": "^![-_a-zA-Z0-9]+([ \t]+[-_a-zA-Z0-9]+)*:"
        },
        {
          "name": "keyword.anki-notes",
          "match": "^~~~[ \t]*$"
        }
      ]
    },
    "block-latex": {
      "name": "string",
      "begin": "\\\\\\[",
      "end": "\\\\\\]"
    },
    "inline-latex": {
      "name": "string",
      "begin": "\\\\\\(",
      "end": "\\\\\\)"
    },
    "block-latex-alt": {
      "name": "string",
      "begin": "\\$\\$(?!\\$)",
      "end": "\\$\\$"
    },
    "inline-latex-alt": {
      "name": "string",
      "begin": "\\$(?!\\$)",
      "end": "\\$"
    }
  },
  "scopeName": "source.anki-notes"
}
