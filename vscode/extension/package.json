{
  "private": true,
  "name": "notatki",
  "displayName": "Notatki",
  "version": "0.0.0",
  "publisher": "aradzie",
  "description": "Write Anki notes in text files using a simple, human-readable format.",
  "keywords": [
    "anki",
    "flashcards",
    "spaced-repetition"
  ],
  "categories": [
    "Other"
  ],
  "homepage": "https://github.com/aradzie/notatki#readme",
  "bugs": {
    "url": "https://github.com/aradzie/notatki/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aradzie/notatki.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.103.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onWebviewPanel:anki-notes.preview"
  ],
  "contributes": {
    "languages": [
      {
        "id": "anki-notes",
        "aliases": [
          "Anki Notes",
          "anki-notes"
        ],
        "extensions": [
          ".note"
        ],
        "configuration": "./language-configuration-notes.json"
      },
      {
        "id": "anki-models",
        "aliases": [
          "Anki Models",
          "anki-models"
        ],
        "extensions": [
          ".model"
        ],
        "configuration": "./language-configuration-models.json"
      }
    ],
    "grammars": [
      {
        "language": "anki-notes",
        "scopeName": "source.anki-notes",
        "path": "./syntaxes/anki-notes.tmLanguage.json"
      },
      {
        "language": "anki-models",
        "scopeName": "source.anki-models",
        "path": "./syntaxes/anki-models.tmLanguage.json",
        "embeddedLanguages": {
          "meta.block.html": "html",
          "meta.block.css": "css"
        }
      }
    ],
    "commands": [
      {
        "command": "anki-notes.showPreview",
        "title": "Anki Notes: Show Preview",
        "category": "Anki Notes"
      },
      {
        "command": "anki-notes.showPreviewToTheSide",
        "title": "Anki Notes: Show Preview to the Side",
        "category": "Anki Notes"
      },
      {
        "command": "anki-notes.showLockedPreviewToTheSide",
        "title": "Anki Notes: Show Locked Preview to the Side",
        "category": "Anki Notes"
      },
      {
        "command": "anki-notes.insertId",
        "title": "Anki Notes: Insert Uinique Note Identifiers",
        "category": "Anki Notes"
      },
      {
        "command": "anki-notes.exportNotes",
        "title": "Anki Notes: Export Compiled Notes",
        "category": "Anki Notes"
      }
    ],
    "keybindings": [
      {
        "command": "anki-notes.showPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == anki-notes"
      },
      {
        "command": "anki-notes.showPreviewToTheSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "editorLangId == anki-notes"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "anki-notes.showPreviewToTheSide",
          "when": "editorLangId == anki-notes",
          "group": "anki-notes"
        },
        {
          "command": "anki-notes.showPreview",
          "when": "editorLangId == anki-notes",
          "group": "anki-notes"
        },
        {
          "command": "anki-notes.insertId",
          "when": "editorLangId == anki-notes",
          "group": "anki-notes"
        }
      ],
      "explorer/context": [
        {
          "command": "anki-notes.showPreview",
          "when": "resourceLangId == anki-notes",
          "group": "anki-notes"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Anki Notes",
      "properties": {
        "anki-notes.insertIdOnSave": {
          "description": "Automatically insert unique note identifiers on save.",
          "default": true,
          "type": "boolean"
        }
      }
    }
  },
  "dependencies": {
    "@notatki/core": "*",
    "@notatki/vscode-protocol": "*"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/vscode": "=1.103.0"
  },
  "scripts": {
    "compile": "tsc",
    "prewatch": "npm run compile",
    "watch": "rm -fr dist && node esbuild.mjs --watch",
    "prebuild": "npm run compile",
    "build": "rm -fr dist && node esbuild.mjs --production",
    "prepackageext": "npm run build",
    "packageext": "npx @vscode/vsce package --out=notatki.vsix",
    "preinstallext": "npm run packageext",
    "installext": "code --install-extension notatki.vsix --force",
    "uninstallext": "code --uninstall-extension aradzie.notatki"
  }
}
