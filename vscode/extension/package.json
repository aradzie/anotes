{
  "private": true,
  "name": "anki-notes",
  "displayName": "anki-notes",
  "version": "0.0.0",
  "publisher": "master",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onWebviewPanel:anki-notes.preview"
  ],
  "contributes": {
    "languages": [
      {
        "id": "anki-notes",
        "aliases": [
          "Anki Notes",
          "anki-notes"
        ],
        "extensions": [
          ".note"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "anki-notes",
        "scopeName": "source.anki-notes",
        "path": "./syntaxes/anki-notes.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "anki-notes.showPreview",
        "title": "Anki Notes: Show Preview",
        "category": "Anki Notes"
      },
      {
        "command": "anki-notes.showPreviewToTheSide",
        "title": "Anki Notes: Show Preview to the Side",
        "category": "Anki Notes"
      },
      {
        "command": "anki-notes.showLockedPreviewToTheSide",
        "title": "Anki Notes: Show Locked Preview to the Side",
        "category": "Anki Notes"
      },
      {
        "command": "anki-notes.insertId",
        "title": "Anki Notes: Insert Uinique Note Identifiers",
        "category": "Anki Notes"
      },
      {
        "command": "anki-notes.exportNotes",
        "title": "Anki Notes: Export Compiled Notes",
        "category": "Anki Notes"
      }
    ],
    "keybindings": [
      {
        "command": "anki-notes.showPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == anki-notes"
      },
      {
        "command": "anki-notes.showPreviewToTheSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "editorLangId == anki-notes"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "anki-notes.showPreviewToTheSide",
          "when": "editorLangId == anki-notes",
          "group": "anki-notes"
        },
        {
          "command": "anki-notes.showPreview",
          "when": "editorLangId == anki-notes",
          "group": "anki-notes"
        },
        {
          "command": "anki-notes.insertId",
          "when": "editorLangId == anki-notes",
          "group": "anki-notes"
        }
      ],
      "explorer/context": [
        {
          "command": "anki-notes.showPreview",
          "when": "resourceLangId == anki-notes",
          "group": "anki-notes"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Anki Notes",
      "properties": {
        "anki-notes.insertIdOnSave": {
          "description": "Automatically insert unique note identifiers on save.",
          "default": true,
          "type": "boolean"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aradzie/anotes.git"
  },
  "dependencies": {
    "@anotes/core": "*",
    "@anotes/vscode-protocol": "*"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@types/vscode": "^1.102.0"
  },
  "scripts": {
    "compile": "tsc",
    "prewatch": "npm run compile",
    "watch": "rm -fr dist; node esbuild.mjs --watch",
    "prebuild": "npm run compile",
    "build": "rm -fr dist; node esbuild.mjs --production",
    "prepackageext": "npm run build",
    "packageext": "npx @vscode/vsce package --out=anki-notes.vsix",
    "preinstallext": "npm run packageext",
    "installext": "code --install-extension anki-notes.vsix --force",
    "uninstallext": "code --uninstall-extension master.anki-notes"
  }
}
